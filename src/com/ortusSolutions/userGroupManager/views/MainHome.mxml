<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title=""
		addedToStage="addedToStageHandler()">
	
	<fx:Metadata>
		[Event(name="loadPeople", type="com.ortusSolutions.userGroupManager.events.ModelEvent")]
		[ManagedEvents("loadPeople")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import com.ortusSolutions.userGroupManager.events.ModelEvent;
			import com.ortusSolutions.userGroupManager.model.PersonDAO;
			
			[Inject(id="applicationName")]
			public var applicationName:String;
			
			protected function addedToStageHandler():void{
				this.dispatchEvent( new Event("configureView", true) );
			}// end addedToStageHandler function
			
			[Init]
			public function iocInitializedHandler():void{
				// preloaded all the locally stored data
				this.dispatchEvent( new ModelEvent(ModelEvent.LOAD_PEOPLE) );
				this.title = this.applicationName;
			}// end iocInitializedHandler function
			
		]]>
	</fx:Script>
	
	<!-- don't show the home button on the main screen -->
	<s:navigationContent />
	
	<!-- Grid for main application icons -->
	<s:VGroup width="100%" height="100%">
		<s:HGroup width="100%" height="100%">
			<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
				<s:Button label="Meetings" click="navigator.pushView(PersonList);" />
			</s:HGroup>
			<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
				<s:Button label="Users" click="navigator.pushView(PersonList);" />
			</s:HGroup>
			<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
				<s:Button label="Prizes" click="navigator.pushView(PersonList);" />
			</s:HGroup>
		</s:HGroup>
		<s:HGroup width="100%" height="100%">
			<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
				<s:Button label="Something" click="navigator.pushView(PersonList);" />
			</s:HGroup>
			<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
				<s:Button label="Settings" click="navigator.pushView(PersonList);" />
			</s:HGroup>
			<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
				<s:Button label="About" click="navigator.pushView(PersonList);" />
			</s:HGroup>
		</s:HGroup>
	</s:VGroup>
	
	
</s:View>
