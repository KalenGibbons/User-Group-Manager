<?xml version="1.0" encoding="utf-8"?>
<base:BasePersonList xmlns:fx="http://ns.adobe.com/mxml/2009" 
					 xmlns:s="library://ns.adobe.com/flex/spark"
					 xmlns:base="com.ortusSolutions.userGroupManager.views.base.*">
	
	<fx:Script>
		<![CDATA[
			import com.ortusSolutions.userGroupManager.model.Meeting;
			
			import spark.events.IndexChangeEvent;
			
			private var meeting:Meeting;
			
			override public function set data(value:Object):void{
				this.meeting = value as Meeting;
			}//end data setter function
			
			private function userSelectionHandler(event:IndexChangeEvent):void{
				meeting.attendees.addItem(event.target.selectedItem);
				trace(meeting.attendees.length + ' members');
				/*var selectedPerson:Person = event.target.selectedItem;
				navigator.pushView(PersonDetails, selectedPerson);*/
			}// end userSelectionHandler function
			
		]]>
	</fx:Script>
	
	<!-- member list -->
	<s:List dataProvider="{people}"
			width="100%" height="100%"
			change="userSelectionHandler(event)">
		<s:itemRenderer>
			<fx:Component>
				<s:MobileIconItemRenderer label="{data.firstName} {data.lastName}" messageField="email" />
			</fx:Component>
		</s:itemRenderer>
	</s:List>
	
	<!-- TODO : Move this -->
	<s:Button label="done" width="100%" click="navigator.popView()" />	
</base:BasePersonList>
